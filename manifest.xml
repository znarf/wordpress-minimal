<package>
  <id>wordpress-theme-minimal</id>
  <name>Minimal</name>
  <version>3.1.0-86</version>
  <type>theme</type>
  <need>css-h6e-minimal</need>
  <extend>wordpress</extend>
  <directory>wp-content/themes/minimal</directory>
  <colors>
      <scheme>base</scheme>
      <scheme>bars</scheme>
  </colors>
  <configuration>
      <preference type="text" name="h6e_minimal_pagewidth" label="Width" defaultValue="auto"/>
      <preference type="text" name="h6e_minimal_fontsize" label="Font Size" defaultValue="1.2em"/>
      <preference type="text" name="h6e_minimal_footertext" label="Footer Text" defaultValue="Powered by &lt;a href=&quot;http://www.wordpress.org/&quot;&gt;WordPress&lt;/a&gt; with a touch of &lt;a href=&quot;http://h6e.net/&quot;&gt;h6e&lt;/a&gt;"/>
  </configuration>
</package>